{
  "name": "Web Tools Suite",
  "short_name": "WebTools",
  "description": "A comprehensive collection of browser-based web tools for images, files, QR codes, and more. All processing happens locally - your data never leaves your device.",
  "version": "1.0.0",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#0f172a",
  "background_color": "#0f172a",
  "categories": ["utilities", "productivity", "developer tools", "photo"],
  "lang": "en-US",
  "dir": "ltr",
  "icons": [
    {
      "src": "/pwa-64x64.png",
      "sizes": "64x64",
      "type": "image/png"
    },
    {
      "src": "/pwa-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/pwa-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/pwa-maskable-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/pwa-maskable-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Web Tools Suite Home Page"
    },
    {
      "src": "/screenshots/mobile-home.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Web Tools Suite Mobile View"
    }
  ],
  "shortcuts": [
    {
      "name": "Image Compressor",
      "short_name": "Compress",
      "description": "Compress images without losing quality",
      "url": "/tools/image-compressor",
      "icons": [{ "src": "/icons/compress.png", "sizes": "96x96" }]
    },
    {
      "name": "QR Generator",
      "short_name": "QR Code",
      "description": "Generate QR codes for URLs, text, and more",
      "url": "/tools/qr-generator",
      "icons": [{ "src": "/icons/qr-code.png", "sizes": "96x96" }]
    },
    {
      "name": "Image Converter",
      "short_name": "Convert",
      "description": "Convert images between formats",
      "url": "/tools/image-converter",
      "icons": [{ "src": "/icons/convert.png", "sizes": "96x96" }]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/tools/image-compressor",
      "accept": {
        "image/png": [".png"],
        "image/jpeg": [".jpg", ".jpeg"],
        "image/webp": [".webp"],
        "image/gif": [".gif"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  }
}
